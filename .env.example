# ── RPA Engine Production Environment ──
# Copy to .env and fill in actual values

# Required: Generate with `openssl rand -hex 32`
SECRET_KEY=
ENCRYPTION_KEY=

# Database
DATABASE_URL=postgresql+asyncpg://rpa_user:STRONG_PASSWORD@postgres:5432/rpa_engine
DB_PASSWORD=STRONG_PASSWORD

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://rpa.example.com

# Workers
UVICORN_WORKERS=4
CELERY_CONCURRENCY=8

# Optional: Claude AI integration
ANTHROPIC_API_KEY=

# Optional: SMTP for email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@rpa.example.com

# Optional: Slack integration
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
